# vim: filetype=neomuttrc
# this file has the sole purpose to extend / overwrite defaults of mutt-wizard

set use_threads=threads sort=last-date sort_aux=date

set reverse_name

set edit_headers

set mailcap_path = ~/.mailcap:$mailcap_path

# navigate sidebar
macro index,pager J <sidebar-next><sidebar-open>
macro index,pager K <sidebar-prev><sidebar-open>
